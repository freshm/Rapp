<% if @blog_posts.any? %>
  <% @blog_posts.each do |post| %>
    <div class="content post">
      <div class="page-header">
        <h1><%= post.title %></h1>
      </div>
      <p>
        <%= post.content %>
      </p>
    </div>
  <% end %><% else %> 
  <div class="row">
    <h1>Welcome to nothing</h1>
      <p>Post's will come soon... very soon..</p>
  </div>
<% end %>