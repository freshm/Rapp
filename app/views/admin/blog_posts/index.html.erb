<%= render 'admin/sidebar' %>
<div class="col-md-10">
  <div class ="row">
    <%= link_to "Add Blog Post", new_admin_blog_post_path, class: "btn btn-primary pull-right" %>
  </div>
  <br />
  <% if @blog_posts.any? %>
    <% @blog_posts.each do |post| %>
      <div class="content post">
        <%= link_to "Edit", edit_admin_blog_post_path(post), class: "btn btn-custom btn-primary pull-right" %>
        <div class="page-header">
          <h1><%= post.title %></h1>
        </div>
        <p>
          <%= post.content %>
        </p>
      </div>
    <% end %>
  <% else %> 
    <div class="row">
      <div class="content post">
        <div class="page-header">
          <h1>You still haven't added a post. Let's do this!</h1>
        </div>
        <p>
          Dummy Text here. Hi!
        </p>
      </div>
    </div>
  <% end %>
</div>